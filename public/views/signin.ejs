<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>NationBudget</title>
    <!--<base href="http://fast-brook-4391.herokuapp.com/">-->
    <link rel="stylesheet" type="text/css" href="static/assets/stylesheets/css/signin.css">
  </head>
  <body>
    <header>
      <div class="flex-center">
        <a class="company-logo" href="/">NationBudget</a>
      </div>
    </header>
    <section>
      <div class="main-container">
        <form id="signin-form">
          <div>
            <input type="email"
                   placeholder="Email"
                   name="email"
                   maxlength="256"
                   id="email-input"
                   required>
            <span id="email-availability"></span>
          </div>
          <div>
            <input type="password"
                   placeholder="Password"
                   name="password"
                   pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{7,}"
                   title="Must contain at least one number and one uppercase and lowercase letter, and at least 7 or more characters"
                   required>
          </div>
          <div>
            <input type="submit"
                   class="button"
                   value="Sign In">
          </div>
        </form>
      </div>
    </section>
    <footer>
      <p class="flex-center">&#169;2015 NationBudget</p>
    </footer>
    <script src="static/assets/js/main.js"></script>
  </body>
</html>
