<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>NationBudget</title>
    <!--<base href="http://fast-brook-4391.herokuapp.com/">-->
    <base href="http://localhost:3000">
    <link rel="stylesheet" type="text/css" href="static/assets/stylesheets/css/signin.css">
  </head>
  <body>
    <header>
      <div class="flex-center">
        <a class="company-logo" href="/">NationBudget</a>
      </div>
    </header>
    <section>
      <div class="main-container">
        <form id="form-signin">
          <div>
            <input type="email"
                   placeholder="Email"
                   name="email"
                   maxlength="256"
                   id="email-input"
                   required>
            <span id="email-availability"></span>
          </div>
          <div>
            <input type="password"
                   placeholder="Password"
                   name="password"
                   id="password-input"
                   required>
          </div>
          <div>
            <input type="button"
                   class="button"
                   value="Sign In"
                   onclick="SIGNIN.submit()">
          </div>
        </form>
      </div>
    </section>
    <footer>
      <p class="flex-center">&#169;2015 NationBudget</p>
    </footer>
    <script src="static/assets/js/signin.js"></script>
  </body>
</html>
