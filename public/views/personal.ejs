<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>NationBudget</title>
    <!--<base href="http://fast-brook-4391.herokuapp.com/">-->
    <base href="http://localhost:3000/">
    <link rel="stylesheet" type="text/css" href="static/assets/stylesheets/css/personal.css">
  </head>
  <body>
    <header>
      <div>
        <a class="company-logo" href="/">NationBudget</a>
      </div>
      <div class="flex-center">
        <h1>Personal Plan</h1>
      </div>
      <div></div>
    </header>
    <section>
      <div class="main-container">
        <form id="form-personal">
          <div>
            <input type="text"
                   placeholder="First Name"
                   name="firstName"
                   maxlength="50"
                   pattern="[a-zA-Z0-9-]+"
                   title="Name can only include letters, numbers, and hyphens"
                   required>
          </div>
          <div>
            <input type="text"
                   placeholder="Last Name"
                   name="lastName"
                   maxlength="50"
                   pattern="[a-zA-Z0-9-]+"
                   title="Name can only include letters, numbers, and hyphens"
                   required>
          </div>
          <div>
            <input type="email"
                   placeholder="Email"
                   name="email"
                   maxlength="256"
                   id="email-input"
                   required>
          </div>
          <div>
            <input type="password"
                   placeholder="Password"
                   name="password"
                   pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{7,}"
                   title="Must contain at least one number and one uppercase and lowercase letter, and at least 7 or more characters"
                   required>
          </div>
          <div>
            <input type="button"
                   class="register-button button"
                   value="Register!"
                   onclick="REGISTER.submit()">
          </div>
        </form>
      </div>
    </section>
    <footer>
      <p class="flex-center">&#169;2015 NationBudget</p>
    </footer>
    <script src="static/assets/js/register.js"></script>
  </body>
</html>
